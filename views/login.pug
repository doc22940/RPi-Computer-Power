extends layout

block content
  link(rel='stylesheet', href='/stylesheets/login.css')
  script(type='text/javascript').
    $(document).ready(function() {
      function changeType() {
        var input = $('#password');
        var btn = $('#visibility');
        if (input.attr('type') == 'password') {
          input.attr('type', 'text');
          btn.html('Hide');
        } else {
          input.attr('type', 'password');
          btn.html('Show');
        }
      };
      $('#visibility').click(changeType);
    });
  div(id='content-wrapper')
    div(id='form-wrapper')
      form(action='/login', method='post')
        input(id='password', name='password', type='password', placeholder='Baby Name Suggestion')
        button(id='submit') Submit
      button(id='visibility') Show
    div(id='message')
      b Thank You for your suggestion!!! See you all on October 27th!
