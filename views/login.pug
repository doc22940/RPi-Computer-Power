extends layout

block content
  link(rel='stylesheet', href='/stylesheets/login.css')
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
  
  <script>
    $("#btn").click(function() {
      var input = $('#password');
      var btn = $('#visibility');
  
      if (input.attr("type") == "password") {
        input.attr("type", "text");
        btn.html("Hide");
      } else {
        input.attr("type", "password");
        btn.html("Show");
      }
    });
  </script>
  
  div(id="content-wrapper")
    form(action="/login", method="post")
      input(id="password", type="password", placeholder="Baby Name Suggestion")
      button(id="visibility") Show
      button Submit
    div(id="message")
      b Thank You for your suggestion!!! See you all on October 27th!
